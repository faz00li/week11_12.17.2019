<!DOCTYPE html>
@using PostOffice.Models;
<html>
  <head>
    <meta charset='utf-8'>
    <title>PostOffice</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h1>Parcel Inventory</h1>

    @if (Model.Count == 0)
    {
      <h2>Inventory Empty</h2>
    }

    <ul>
      @foreach(Parcel p in Model)
      {
        <li><a href="parcels/@p.Id">@p.Description</a></li>
      }
    </ul>

    <form action="/parcels/delete" method="post">
      <button type="submit" name="button">Clear All</button>
    </form>

    <h3><a href="/">Home</a></h3>
    <h3><a href="/parcels/new">Add Parcel</a></h3>
  </body>
</html>
